# transpose a list of frames. 


import sys
import argparse
from argparse import ArgumentParser
import orb
from orb.core import Tools

to = Tools(no_log=True)

def main(args):

    path = args.list_path
    with open(path, 'r') as f:
        for line in f:
            line = line.strip()        
            if 'fits' in line:
                data, hdr = to.read_fits(line, return_header=True)
                data = data.transpose()
                to.write_fits(line, data, fits_header=hdr, overwrite=True)


if __name__ == "__main__":

    parser = ArgumentParser(version=('ORB-version {}'.format(
                              orb.core.__version__)),
                            description=
                            "Transpose a list of FITS images.")


    parser.add_argument('list_path', help='Path to a list of FITS files')


    args=parser.parse_args()
    
    main(args)
